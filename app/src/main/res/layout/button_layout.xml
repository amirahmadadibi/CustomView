<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <com.microdevrj.superellipse.custom_superellipse_views.SuperellipseImageView
        android:id="@+id/whoamiButtonImageview"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:paintStyle="fillAndStroke" />

    <TextView
        android:id="@+id/whoamiButtonTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#263238"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/whoamiButtonImageview"
        app:layout_constraintEnd_toStartOf="@+id/whoamiButtonImageview"
        app:layout_constraintTop_toTopOf="@+id/whoamiButtonImageview" />
</androidx.constraintlayout.widget.ConstraintLayout>